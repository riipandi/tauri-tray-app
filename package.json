{
    "name": "tauri-tray-app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "tauri dev",
        "build": "tauri build",
        "build:mac:x64": "tauri build --target x86_64-apple-darwin",
        "build:mac:arm": "tauri build --target aarch64-apple-darwin",
        "build:mac:universal": "tauri build --target universal-apple-darwin",
        "build:win:x64": "tauri build --target x86_64-pc-windows-msvc",
        "build:win:arm": "tauri build --target aarch64-pc-windows-msvc",
        "build:debug": "tauri build --debug",
        "build:ui": "pnpm generate:types && vite build",
        "dev:ui": "pnpm generate:types && vite",
        "generate:icons": "tauri icon ./src/assets/images/app-icon.png",
        "generate:signkey": "tauri signer generate -w .tauri/${npm_package_name}_signer.key",
        "generate:types": "typeshare src-tauri --lang=typescript --output-file=src/types/generated.ts",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "cleanup": "rimraf dist src-tauri/target node_modules",
        "format:rs": "(cd src-tauri && cargo fmt)",
        "format:js": "biome format . --write",
        "format": "pnpm run \"/format:/\"",
        "check": "biome check --apply .",
        "lint": "biome lint --apply .",
        "test:js": "echo 'Not yet implemented'",
        "test:rs": "(cd src-tauri && cargo nextest run)",
        "tauri": "tauri"
    },
    "dependencies": {
        "@solidjs/router": "^0.13.0",
        "@tauri-apps/api": ">=2.0.0-beta.0",
        "@tauri-apps/plugin-dialog": "2.0.0-beta.2",
        "@tauri-apps/plugin-fs": "2.0.0-beta.2",
        "@tauri-apps/plugin-http": "2.0.0-beta.2",
        "@tauri-apps/plugin-log": "2.0.0-beta.2",
        "@tauri-apps/plugin-notification": "2.0.0-beta.2",
        "@tauri-apps/plugin-os": "2.0.0-beta.2",
        "@tauri-apps/plugin-process": "2.0.0-beta.2",
        "@tauri-apps/plugin-shell": "^2.0.0-beta.2",
        "@tauri-apps/plugin-updater": "2.0.0-beta.2",
        "@tauri-apps/plugin-window": "2.0.0-alpha.1",
        "clsx": "^2.1.0",
        "lucide-solid": "^0.358.0",
        "solid-js": "^1.8.15",
        "tailwind-merge": "^2.2.1"
    },
    "devDependencies": {
        "@biomejs/biome": "1.6.1",
        "@tailwindcss/vite": "4.0.0-alpha.9",
        "@tauri-apps/cli": ">=2.0.0-beta.0",
        "@types/node": "^20.11.28",
        "lefthook": "^1.6.7",
        "npm-check-updates": "^16.14.17",
        "rimraf": "^5.0.5",
        "tailwindcss": "4.0.0-alpha.9",
        "typescript": "^5.4.2",
        "vite-plugin-solid": "^2.10.2",
        "vite": "^5.1.6"
    }
}
