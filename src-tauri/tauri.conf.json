{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/core/tauri-config-schema/schema.json",
    "productName": "Tauri App",
    "version": "0.0.0",
    "identifier": "com.example.tauri-tray-app",
    "build": {
        "beforeDevCommand": "pnpm dev:ui",
        "beforeBuildCommand": "pnpm build:ui",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "macOSPrivateApi": true,
        "windows": [],
        "security": {
            "csp": null
        },
        "trayIcon": null
    },
    "bundle": {
        "active": true,
        "category": "DeveloperTool",
        "publisher": "Your Company",
        "copyright": "Copyright Â© 2024 Your Company",
        "shortDescription": "A starter app for Tauri",
        "longDescription": "A Tauri App with SolidJS, Tailwind, TypeScript, and Vite",
        "targets": ["app", "dmg", "nsis", "deb", "appimage", "updater"],
        "macOS": {
            "dmg": {
                "appPosition": {
                    "x": 180,
                    "y": 170
                },
                "applicationFolderPosition": {
                    "x": 480,
                    "y": 170
                },
                "windowSize": {
                    "height": 400,
                    "width": 660
                }
            },
            "minimumSystemVersion": "11.0",
            "entitlements": "Info.plist",
            "providerShortName": null,
            "signingIdentity": null,
            "files": {}
        },
        "windows": {
            "allowDowngrades": true,
            "certificateThumbprint": null,
            "digestAlgorithm": null,
            "nsis": null,
            "timestampUrl": null,
            "tsp": false,
            "webviewFixedRuntimePath": null,
            "webviewInstallMode": {
                "silent": true,
                "type": "downloadBootstrapper"
            },
            "wix": null
        },
        "resources": [],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}
