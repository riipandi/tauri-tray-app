# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.{prettierrc,json,jsonc,plist,rs}]
indent_size = 4
max_line_length = off

[*.txt]
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = off

[{Makefile,**.mk}]
indent_style = tab
